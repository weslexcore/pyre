---
import hero from "../lib/hero";
import { withBase } from "../lib/paths";
import { Image } from "astro:assets";
---

<section class="relative min-h-[100dvh] overflow-clip">
  <div class="absolute inset-0" aria-hidden="true">
    <Image src={withBase(hero.images.background.src)} alt={hero.images.background.alt} width="1920" height="1080" class="h-full w-full object-cover object-center" loading="eager" decoding="async" />
  </div>
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.2)]" aria-hidden="true" />

  <div class="relative z-10 min-h-[100dvh] flex flex-col justify-between">
    <!-- Top line -->
    <div class="mx-auto w-full px-4 sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl pt-24 text-left">
      <p class="font-primary-semibold text-[clamp(3rem,5vw,4rem)] tracking-[-0.02em] leading-none uppercase text-[var(--pyre-creme)]">{hero.elements.heroText}</p>
    </div>

    <!-- Center copy + logo -->
    <div class="mx-auto w-full px-4 sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl">
      <div class="grid grid-cols-1 sm:grid-cols-[1fr_auto_1fr] items-center gap-3 sm:gap-4 text-[var(--pyre-creme)] sm:text-left text-center">
        <p class="font-primary-semibold tracking-[-0.02em] text-[clamp(2rem,5vw,3rem)] sm:justify-self-end uppercase">{hero.elements.leftWord}</p>
        <Image
          src={withBase(hero.images.centerLogo.src)}
          alt={hero.images.centerLogo.alt}
          width="577"
          height="576"
          class="h-[clamp(175px,30vw,200px)] w-auto mx-auto"
          loading="eager"
          decoding="async"
        />
        <p class="font-primary-semibold tracking-[-0.02em] text-[clamp(2rem,5vw,3rem)] sm:justify-self-start uppercase">{hero.elements.rightWord}</p>
      </div>
    </div>

    <!-- Bottom line -->
    <div class="mx-auto w-full px-4 sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl pb-10">
      <p class="font-primary-semibold text-[clamp(2.5rem,5vw,3.5rem)] tracking-[-0.02em] uppercase text-[var(--pyre-creme)] leading-none text-right">{hero.elements.bottomLine}</p>
    </div>
  </div>
</section>


