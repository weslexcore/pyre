---
interface Props {
  type?: "text" | "email" | "password" | "tel";
  placeholder?: string;
  value?: string;
  required?: boolean;
  class?: string;
  id?: string;
  name?: string;
  disabled?: boolean;
}

const { 
  type = "text", 
  placeholder = "", 
  value = "", 
  required = false, 
  class: className = "",
  id,
  name,
  disabled = false
} = Astro.props;
---

<input
  type={type}
  placeholder={placeholder}
  value={value}
  required={required}
  id={id}
  name={name}
  disabled={disabled}
  class={`input input-bordered w-full font-primary-regular focus:outline-none focus:ring-2 focus:ring-primary ${className}`}
  aria-describedby={id ? `${id}-description` : undefined}
/> 