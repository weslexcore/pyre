---
export interface Props {
	variant?: 'primary' | 'secondary' | 'outline';
	size?: 'sm' | 'md' | 'lg';
	class?: string;
	ariaLabel?: string;
	disabled?: boolean;
}

const { variant = 'primary', size = 'md', class: className = '', ariaLabel, disabled = false } = Astro.props;

const baseClasses = 'btn font-primary-semibold rounded-lg transition-all duration-300';

const variantClasses = {
	primary: 'bg-primary text-primary-foreground hover:bg-primary/90 focus:ring-primary',
	secondary: 'bg-secondary text-secondary-foreground hover:bg-secondary/90 focus:ring-secondary',
	outline: 'border-2 border-foreground text-foreground hover:bg-muted focus:ring-primary'
};

const sizeClasses = {
	sm: 'btn-sm',
	md: 'btn-md',
	lg: 'btn-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<button 
	class={classes}
	aria-label={ariaLabel}
	disabled={disabled}
>
	<slot />
</button>
