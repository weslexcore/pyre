---
import Form from './ui/form.astro';
import Input from './ui/input.astro';
---

<section id="contact" class="py-20 color-combo-blue-creme">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="font-primary-semibold text-scale-3 sm:text-scale-4 text-foreground mb-6 tracking-tight leading-tight">
          Get in Touch
        </h2>
        <p class="font-primary-regular text-lg sm:text-xl text-muted-foreground max-w-2xl mx-auto">
          Have questions about Pyre? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h3 class="font-primary-semibold text-2xl text-foreground mb-6">
              Contact Information
            </h3>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="text-2xl">üìß</div>
                <div>
                  <h4 class="font-primary-semibold text-foreground">Email</h4>
                  <p class="font-primary-regular text-muted-foreground">
                    <a href="mailto:hello@pyresauna.com" class="hover:text-primary transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                      hello@pyresauna.com
                    </a>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="text-2xl">üìç</div>
                <div>
                  <h4 class="font-primary-semibold text-foreground">Location</h4>
                  <p class="font-primary-regular text-muted-foreground">
                    Richmond, Virginia<br>
                    <span class="text-sm">Exact location coming soon</span>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="text-2xl">üïí</div>
                <div>
                  <h4 class="font-primary-semibold text-foreground">Opening</h4>
                  <p class="font-primary-regular text-muted-foreground">
                    Coming Soon<br>
                    <span class="text-sm">Join our waitlist for updates</span>
                  </p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="pt-8 border-t border-border">
            <h4 class="font-primary-semibold text-lg text-foreground mb-4">
              Follow Our Journey
            </h4>
            <div class="flex space-x-4">
              <a 
                href="https://instagram.com/pyresauna" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-2xl hover:scale-110 transition-transform focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
              >
                üì∏
              </a>
              <a 
                href="https://facebook.com/pyresauna" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-2xl hover:scale-110 transition-transform focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
              >
                üìò
              </a>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="bg-card border border-border rounded-lg p-8 shadow-lg">
          <h3 class="font-primary-semibold text-2xl text-foreground mb-6">
            Send us a Message
          </h3>
          
          <Form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="contactFirstName" class="block font-primary-semibold text-sm text-foreground mb-2">
                  First Name
                </label>
                <Input 
                  type="text" 
                  id="contactFirstName" 
                  name="contactFirstName" 
                  placeholder="Your first name" 
                  required 
                  class="focus:ring-2 focus:ring-primary focus:ring-offset-2"
                />
              </div>
              <div>
                <label for="contactLastName" class="block font-primary-semibold text-sm text-foreground mb-2">
                  Last Name
                </label>
                <Input 
                  type="text" 
                  id="contactLastName" 
                  name="contactLastName" 
                  placeholder="Your last name" 
                  required 
                  class="focus:ring-2 focus:ring-primary focus:ring-offset-2"
                />
              </div>
            </div>
            
            <div>
              <label for="contactEmail" class="block font-primary-semibold text-sm text-foreground mb-2">
                Email Address
              </label>
              <Input 
                type="email" 
                id="contactEmail" 
                name="contactEmail" 
                placeholder="your.email@example.com" 
                required 
                class="focus:ring-2 focus:ring-primary focus:ring-offset-2"
              />
            </div>
            
            <div>
              <label for="contactMessage" class="block font-primary-semibold text-sm text-foreground mb-2">
                Message
              </label>
              <textarea 
                id="contactMessage" 
                name="contactMessage" 
                rows="4"
                placeholder="Tell us about your questions or how we can help..."
                class="flex w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 resize-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                required
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-primary text-primary-foreground font-primary-semibold py-4 px-8 rounded-lg hover:bg-primary/90 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
            >
              Send Message
            </button>
          </Form>
        </div>
      </div>
    </div>
  </div>
</section> 