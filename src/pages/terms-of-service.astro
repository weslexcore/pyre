---
import Layout from "../layouts/main.astro";
import { termsOfService } from "../lib/policies";
import { Image } from "astro:assets";
import redFlowersInHand from "../assets/images/red_flowers_in_hand.jpeg";

const pageTitle = `${termsOfService.title} | Pyre Sauna`;
const description = termsOfService.intro ?? termsOfService.sections[0]?.paragraphs?.[0] ?? "";
---

<Layout title={pageTitle} description={description}>
	{termsOfService.headerImage && (
		<div class="w-full max-h-[45dvh] overflow-hidden">
			<Image 
				src={redFlowersInHand} 
				alt={termsOfService.headerImage.alt || "Terms of Service header"} 
				width={1920}
				height={1080}
				class="w-full h-full max-h-[45dvh] object-cover" 
				loading="eager"
				decoding="async"
			/>
		</div>
	)}
	
	<main class="mx-auto max-w-screen-md px-4 py-16">
		<h1 class="font-primary-semibold text-3xl md:text-4xl">{termsOfService.title}</h1>
		{ termsOfService.effectiveDate || termsOfService.lastUpdated ? (
			<p class="mt-2 text-sm text-gray-600">
				{termsOfService.effectiveDate ? `Effective Date: ${termsOfService.effectiveDate}` : null}
				{termsOfService.effectiveDate && termsOfService.lastUpdated ? ' Â· ' : null}
				{termsOfService.lastUpdated ? `Last updated: ${termsOfService.lastUpdated}` : null}
			</p>
		) : null }

		{ termsOfService.intro ? (
			<p class="mt-6 text-base leading-7">{termsOfService.intro}</p>
		) : null }

		{termsOfService.sections.map((section) => (
			<section class="mt-10">
				<h2 class="font-primary-semibold text-2xl">{section.heading}</h2>
				{section.paragraphs?.map((p) => (
					<p class="mt-4 text-base leading-7">{p}</p>
				))}
				{section.lists?.map((list) => (
					<div class="mt-6">
						{list.title ? <h3 class="font-primary-semibold text-xl">{list.title}</h3> : null}
						<ul class="mt-2 list-disc pl-6 space-y-2">
							{list.items.map((item) => (
								<li class="text-base leading-7">{item.text}</li>
							))}
						</ul>
					</div>
				))}
			</section>
		))}
	</main>
</Layout>
