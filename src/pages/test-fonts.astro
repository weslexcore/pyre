---
import Layout from '../layouts/main.astro';
---

<Layout>
  <div class="container mx-auto p-8 space-y-8">
    <h1 class="text-4xl font-bold mb-8">Font Test Page</h1>
    
    <div class="space-y-4">
      <div>
        <h2 class="text-2xl font-semibold mb-2">Default Body Text (should be PPNeueMontreal-Regular)</h2>
        <p class="text-lg">This is the default body text using PPNeueMontreal-Regular font.</p>
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-2">Custom Font Classes</h2>
        <p class="font-primary-regular text-lg">This uses font-primary-regular class.</p>
        <p class="font-primary-semibold text-lg">This uses font-primary-semibold class.</p>
        <p class="font-mono-bold text-lg">This uses font-mono-bold class.</p>
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-2">Standard Tailwind Font Classes</h2>
        <p class="font-sans text-lg">This uses font-sans class.</p>
        <p class="font-mono text-lg">This uses font-mono class.</p>
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-2">Font Weight Tests</h2>
        <p class="font-normal text-lg">Normal weight (400)</p>
        <p class="font-semibold text-lg">Semibold weight (600)</p>
        <p class="font-bold text-lg">Bold weight (700)</p>
      </div>
    </div>
  </div>
</Layout> 