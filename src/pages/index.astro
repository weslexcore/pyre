---
import Layout from "../layouts/main.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import SignupForm from "../components/SignupForm.astro";
---

<Layout>
	<header class="fixed inset-x-0 top-0 z-50 bg-transparent">
		<div class="mx-auto w-full px-4 flex items-center justify-between gap-4 py-4 sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl">
			<a href="/" aria-label="Pyre Sauna home" class="inline-flex">
				<img
					src="/logos/creme/logo_with_text.png"
					alt="Pyre Sauna + Cold Plunge"
					class="h-8 w-auto"
					loading="eager"
					decoding="sync"
				/>
			</a>
			<div class="ml-auto">
				<Button href="#signup" variant="outline" size="sm" ariaLabel="Join the mailing list">Join the mailing list</Button>
			</div>
		</div>
	</header>

	<main>
		<Hero />
		<SignupForm />
	</main>
</Layout>
